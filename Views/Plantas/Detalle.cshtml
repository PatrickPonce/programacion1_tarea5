@model PROGRAMACION1_TAREA5.Models.Planta

@{
    ViewData["Title"] = @Model.Nombre;
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="row g-0">
            <div class="col-md-5 text-center bg-light d-flex align-items-center justify-content-center p-3">
                <img src="@Model.Imagen" alt="@Model.Nombre" class="img-fluid rounded detalle-img" style="max-height: 350px; object-fit: cover;" />
            </div>

            <div class="col-md-7">
                <div class="card-body p-4">
                    <h2 class="card-title text-success fw-bold mb-3">@Model.Nombre</h2>

                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item"><strong>Origen:</strong> @Model.Origen</li>
                        <li class="list-group-item"><strong>Especie:</strong> @Model.Especie</li>
                        <li class="list-group-item"><strong>Altura m√°xima:</strong> @Model.AlturaMaxima m</li>
                    </ul>

                    <p class="card-text"><strong>Notas:</strong> @Model.Notas</p>

                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Plantas")" class="btn btn-outline-success btn-lg">Volver a la lista</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

